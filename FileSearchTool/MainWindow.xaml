<Window x:Class="FileSearchTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSearchTool"
        xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
        mc:Ignorable="d"
        Title="文件内容索引与搜索工具" Height="720" Width="1100"
        MinHeight="640" MinWidth="900"
        Background="#F5F7FB">
    <Window.Resources>
        <Color x:Key="SurfaceColor">#FFFFFFFF</Color>
        <Color x:Key="SurfaceBorderColor">#E5EAF5</Color>
        <Color x:Key="TextPrimaryColor">#1F2A44</Color>
        <Color x:Key="TextSecondaryColor">#667085</Color>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceBorderBrush" Color="{StaticResource SurfaceBorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <Style TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="RowBackground" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource SurfaceBorderBrush}"/>
        </Style>
        <Style TargetType="StatusBar">
            <Setter Property="Background" Value="#F0F3F8"/>
            <Setter Property="BorderBrush" Value="{StaticResource SurfaceBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1,1,0,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        </Style>
        <LinearGradientBrush x:Key="HeroGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#2563EB" Offset="0"/>
            <GradientStop Color="#06B6D4" Offset="1"/>
        </LinearGradientBrush>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
        <SolidColorBrush x:Key="SelectionRowBrush" Color="#EAF2FF"/>
        <Style TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SelectionRowBrush}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5FAFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 菜单栏 -->
        <Menu Grid.Row="0" Background="Transparent">
            <MenuItem Header="文件(_F)">
                <MenuItem Header="打开文件位置" Click="OpenFileLocation_Click" />
                <MenuItem Header="复制文件路径" Click="CopyPath_Click" />
                <Separator />
                <MenuItem Header="退出" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="编辑(_E)">
                <MenuItem Header="首选项" Click="Preferences_Main_Click" />
            </MenuItem>
            <MenuItem Header="工具(_T)">
                <MenuItem Header="选择目录..." Click="BrowseButton_Click" />
                <MenuItem Header="建立索引" Command="{Binding StartIndexingCommand}" />
                <MenuItem Header="取消索引" Command="{Binding CancelIndexingCommand}" />
                <Separator />
                <MenuItem Header="索引管理" Click="OpenIndexManagement_Click" />
                <MenuItem Header="清理无效记录" Click="CleanupInvalidRecords_Click" />
                <MenuItem Header="生成测试数据" Click="GenerateTestData_Click" />
                <Separator />
                <MenuItem Header="定时索引">
                    <MenuItem Header="每1小时" Tag="60" Click="ScheduledIndexing_PresetInterval_Click" />
                    <MenuItem Header="每2小时" Tag="120" Click="ScheduledIndexing_PresetInterval_Click" />
                    <MenuItem Header="每4小时" Tag="240" Click="ScheduledIndexing_PresetInterval_Click" />
                    <MenuItem Header="每8小时" Tag="480" Click="ScheduledIndexing_PresetInterval_Click" />
                    <MenuItem Header="每12小时" Tag="720" Click="ScheduledIndexing_PresetInterval_Click" />
                    <MenuItem Header="自定义..." Click="ScheduledIndexing_CustomInterval_Click" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="帮助(_H)">
                <MenuItem Header="关于" Click="About_Click" />
            </MenuItem>
        </Menu>

        <!-- 顶部紧凑搜索栏 -->
        <Border Grid.Row="1" Background="#F9FAFB" CornerRadius="6" Padding="6" Margin="0,2,0,8" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" CornerRadius="8" Background="#F5F7FB" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" Padding="6" Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="&#xE11A;" Foreground="#64748B" VerticalAlignment="Center" Margin="6,0,8,0"/>
                        <TextBox x:Name="SearchTextBox" 
                                 Grid.Column="1"
                                 Height="28"
                                 Padding="8,2"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 KeyDown="SearchTextBox_KeyDown"
                                 Margin="0"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#0F172A"
                                 ToolTip="输入关键字搜索…"/>
                    </Grid>
                </Border>
                <Button Grid.Column="1" Click="SearchButton_Click" Style="{StaticResource AccentButtonStyle}" Height="30" Padding="12,4" Margin="0,0,6,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE11A;" Margin="0,0,6,0"/>
                        <TextBlock Text="搜索"/>
                    </StackPanel>
                </Button>
                
                <!-- 索引路径选择 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="索引路径:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#64748B"/>
                    <ComboBox x:Name="IndexPathComboBox" 
                              Width="200"
                              Height="28"
                              Margin="0,0,8,0"
                              SelectedItem="{Binding SelectedIndexPath}"
                              Loaded="IndexPathComboBox_Loaded"
                              SelectionChanged="IndexPathComboBox_SelectionChanged"/>
                    <Button Content="浏览" Click="BrowseButton_Click" Height="28" Padding="12,0" Margin="0,0,8,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 结果和预览区域 -->
        <Grid Grid.Row="2" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" MinWidth="360"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*" MinWidth="360"/>
            </Grid.ColumnDefinitions>

            <!-- 搜索结果 -->
            <Border Grid.Column="0" Background="#FFFFFF" CornerRadius="0" Padding="0" Margin="0" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0"/>
                </Border.Effect>
                <Grid>
                    <DataGrid x:Name="ResultsDataGrid"
                          ItemsSource="{Binding SearchResults}"
                          SelectedItem="{Binding SelectedResult}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          RowHeight="34"
                          HeadersVisibility="Column"
                          CanUserResizeRows="False"
                          FontSize="13"
                          EnableRowVirtualization="True"
                          EnableColumnVirtualization="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          ScrollViewer.CanContentScroll="True"
                          
                          SelectionChanged="ResultsDataGrid_SelectionChanged"
                          MouseDoubleClick="ResultsDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                        <DataGridTemplateColumn Header="文件" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16" Height="16" Margin="0,0,8,0" Source="{Binding FileIcon}"/>
                                        <TextBlock Text="{Binding FileName}" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Text="关键字至少2个或以上"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#98A2B3" FontSize="14" FontWeight="SemiBold"
                               Visibility="{Binding IsKeywordTooShort, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Border>

            <!-- 分割线 -->
            <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="{StaticResource SurfaceBorderBrush}"/>

            <!-- 文件预览 -->
            <Border Grid.Column="2" Background="#FFFFFF" CornerRadius="0" Padding="0" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="预览" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4" Visibility="Collapsed"/>
                    
                    <!-- 预览搜索工具栏（常显） -->
                    <Grid Grid.Row="0" Margin="0,0,0,6">
                        <Border CornerRadius="8" Background="#F5F7FB" BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1" Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox x:Name="PreviewSearchTextBox" 
                                             Grid.Column="0"
                                             Text=""
                                             KeyDown="PreviewSearchTextBox_KeyDown"
                                             ToolTip="在预览中查找"
                                             VerticalAlignment="Center"/>
                                    
                                    <TextBlock x:Name="MatchCountTextBlock" 
                                               Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               FontWeight="Bold"/>
                                </Grid>
                                
                                <Button Grid.Column="1" x:Name="PreviousMatchButton" 
                                        Content="↑" 
                                        Click="PreviousMatch_Click"
                                        Margin="4,0,0,0"
                                        Padding="6,0"
                                        Height="24"
                                        VerticalAlignment="Center"/>
                                
                                <Button Grid.Column="2" x:Name="NextMatchButton" 
                                        Content="↓" 
                                        Click="NextMatch_Click"
                                        Margin="2,0,0,0"
                                        Padding="6,0"
                                        Height="24"
                                        VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- 预览内容 -->
                    <RichTextBox x:Name="PreviewRichTextBox"
                                 Grid.Row="1"
                                 IsReadOnly="True"
                                 Padding="8"
                                 FontSize="14"
                                 FontFamily="Segoe UI"
                                 BorderBrush="{StaticResource SurfaceBorderBrush}" BorderThickness="1"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 Background="#FFFFFF"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
                </Grid>
            </Border>
        </Grid>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="3" Margin="0,0,0,8">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock>
                    <Run Text="结果: "/>
                    <Run Text="{Binding SearchResults.Count, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
        
        <!-- 索引状态栏 -->
        <StatusBar Grid.Row="4" Visibility="{Binding IsIndexing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="正在处理: "/>
                    <Run Text="{Binding ProcessedFiles, Mode=OneWay}"/>
                    <Run Text=" / "/>
                    <Run Text="{Binding TotalFiles, Mode=OneWay}"/>
                    <Run Text=" 文件"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
