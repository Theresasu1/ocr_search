<Window x:Class="FileSearchTool.Windows.IndexManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="索引管理" 
        Height="450" 
        Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="350"
        MinWidth="500"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display">
    <Window.Resources>
        <!-- 删除按钮样式 -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 说明文本 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="索引管理" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock TextWrapping="Wrap" Foreground="#666" FontSize="13">
                删除索引将清空所有已建立的索引数据。删除后，您需要重新建立索引才能进行搜索。
            </TextBlock>
        </StackPanel>

        <!-- 索引信息 -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                Padding="25" 
                CornerRadius="4"
                Background="#F9F9F9"
                VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 数据库存储位置，仅显示路径 -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="数据库位置：" 
                           VerticalAlignment="Center"
                           FontSize="13"
                           Margin="0,0,0,15"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           x:Name="DatabasePathTextBlock" 
                           Text="加载中..." 
                           FontWeight="Bold"
                           FontSize="13"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="350"
                           ToolTip="{Binding Text, RelativeSource={RelativeSource Self}}"/>
            </Grid>
        </Border>

        <!-- 按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SetPathButton"
                    Content="设置存储位置" 
                    Width="120" 
                    Height="36"
                    FontSize="13"
                    Margin="0,0,10,0"
                    Click="BrowseDatabase_Click"/>
            <Button x:Name="DeleteButton"
                    Content="删除所有索引" 
                    Width="120" 
                    Height="36"
                    FontSize="13"
                    Style="{StaticResource DeleteButtonStyle}"
                    Click="DeleteIndex_Click"/>
        </StackPanel>
    </Grid>
</Window>
