<UserControl x:Class="FileSearchTool.Windows.HotKeySettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style x:Key="KeyboardKeyStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </UserControl.Resources>
    
    <StackPanel Margin="25">
        <!-- 标题区域 -->
        <TextBlock Text="快捷键设置" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,8"/>
        
        <TextBlock Text="全局快捷键用于在任何时候快速呼出/隐藏搜索工具主界面" 
                   Foreground="Gray" 
                   FontSize="13"
                   Margin="0,0,0,20"/>

        <!-- 设置区域 -->
        <Border Background="#FFFFFF" 
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4" 
                Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 当前快捷键显示 -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="当前快捷键：" 
                               VerticalAlignment="Center" 
                               FontSize="13"/>
                    
                    <Border Grid.Column="1" 
                            Background="#F5F7FB" 
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4" 
                            Padding="12,8">
                        <TextBlock x:Name="CurrentHotKeyText" 
                                   Text="未设置" 
                                   VerticalAlignment="Center" 
                                   FontWeight="SemiBold" 
                                   FontSize="14" 
                                   Foreground="#0078D7"/>
                    </Border>
                </Grid>
                
                <!-- 设置新快捷键 -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="设置新快捷键：" 
                               VerticalAlignment="Center" 
                               FontSize="13"/>
                    
                    <Border Grid.Column="1" 
                            BorderBrush="#0078D7" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Background="#FFFFFF">
                        <TextBox x:Name="HotKeyTextBox" 
                                 IsReadOnly="True"
                                 VerticalAlignment="Center" 
                                 Height="36"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="12,0"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"
                                 ToolTip="点击后按组合键进行设置，或使用右侧&quot;重置&quot;恢复未设置状态"
                                 GotKeyboardFocus="HotKeyTextBox_GotKeyboardFocus"
                                 PreviewKeyDown="HotKeyTextBox_PreviewKeyDown"/>
                    </Border>

                    <Button Grid.Column="2" 
                            x:Name="ResetHotKeyButton" 
                            Content="重置"
                            Width="80" 
                            Height="36" 
                            Margin="12,0,0,0"
                            Click="ResetHotKeyButton_Click" 
                            FontSize="13"/>
                </Grid>
                
                <!-- 快捷键行为说明 -->
                <Border Grid.Row="2" 
                        Background="#F0F8FF" 
                        BorderBrush="#C0D8F0"
                        BorderThickness="1"
                        CornerRadius="4" 
                        Padding="12,10">
                    <StackPanel>
                        <TextBlock Text="快捷键行为：" 
                                   FontSize="13" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <TextBlock Foreground="#666666" 
                                   FontSize="12" 
                                   TextWrapping="Wrap">
                            • 当窗口隐藏或未激活时，按快捷键显示并激活窗口&#10;
                            • 当窗口已激活时，再次按快捷键将最小化窗口
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- 保存按钮 -->
        <Button x:Name="SaveButton" 
                Content="保存设置" 
                Width="100" 
                Height="32" 
                HorizontalAlignment="Left"
                Margin="0,20,0,0"
                Click="SaveButton_Click"/>
    </StackPanel>
</UserControl>