<Window x:Class="FileSearchTool.Windows.HotKeySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSearchTool.Windows"
        mc:Ignorable="d"
        Title="全局快捷键设置"
        Height="520"
        Width="700"
        MinHeight="480"
        MinWidth="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Background="White">
    <Window.Resources>
        <Style x:Key="KeyboardKeyStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Border Background="White" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0">
                <TextBlock Text="全局快捷键设置" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15" 
                           FontFamily="Microsoft YaHei" 
                           Foreground="#333333"
                           TextWrapping="Wrap"/>
                <TextBlock Text="全局快捷键用于在任何时候快速呼出/隐藏搜索工具主界面" 
                           Margin="0,0,0,20" 
                           FontFamily="Microsoft YaHei" 
                           Foreground="#666666"
                           TextWrapping="Wrap"
                           FontSize="13"/>
            </StackPanel>
                
            <Border Grid.Row="1" 
                    Background="#F8F8F8" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="60"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 当前快捷键显示区域 -->
                    <Grid Grid.Row="0" Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="当前快捷键：" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0" 
                                   FontFamily="Microsoft YaHei" 
                                   Foreground="#333333" 
                                   FontSize="15"
                                   FontWeight="Medium"/>
                        
                        <Border Grid.Column="1" 
                                Background="White" 
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                CornerRadius="6" 
                                Padding="18,12" 
                                MinWidth="200"
                                MaxWidth="450">
                            <TextBlock x:Name="CurrentHotKeyText" 
                                       Text="未设置" 
                                       VerticalAlignment="Center" 
                                       FontFamily="Microsoft YaHei" 
                                       FontWeight="SemiBold" 
                                       FontSize="16" 
                                       TextTrimming="CharacterEllipsis"
                                       Foreground="#0078D7"/>
                        </Border>
                    </Grid>
                    
                    <!-- 设置新快捷键区域 -->
                    <Grid Grid.Row="1" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="设置新快捷键：" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,15,0" 
                                   FontFamily="Microsoft YaHei" 
                                   Foreground="#333333" 
                                   FontSize="15"
                                   FontWeight="Medium"/>
                        
                        <Border Grid.Column="1" 
                                BorderBrush="#0078D7" 
                                BorderThickness="2" 
                                CornerRadius="6"
                                Background="White">
                            <TextBox x:Name="HotKeyTextBox" 
                                     IsReadOnly="True"
                                     VerticalAlignment="Center" 
                                     Height="48"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="16,0"
                                     FontFamily="Microsoft YaHei"
                                     FontSize="15"
                                     VerticalContentAlignment="Center"
                                     Foreground="#333333"
                                     ToolTip="点击后按组合键进行设置，或使用右侧&quot;重置&quot;恢复未设置状态"
                                     GotKeyboardFocus="HotKeyTextBox_GotKeyboardFocus"
                                     PreviewKeyDown="HotKeyTextBox_PreviewKeyDown"/>
                        </Border>

                        <Button Grid.Column="2" 
                                x:Name="ResetHotKeyButton" 
                                Width="95" 
                                Height="48" 
                                Margin="12,0,0,0"
                                Click="ResetHotKeyButton_Click" 
                                FontFamily="Microsoft YaHei" 
                                FontSize="14"
                                Background="#F0F0F0" 
                                Foreground="#333333"
                                BorderThickness="1" 
                                BorderBrush="#CCCCCC" 
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}" 
                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="重置" FontWeight="SemiBold"/>
                        </Button>
                    </Grid>
                    
                    <!-- 行为说明 -->
                    <Border Grid.Row="2" 
                            Background="#E8F4FD" 
                            BorderBrush="#B3D9F7"
                            BorderThickness="1"
                            CornerRadius="6" 
                            Padding="16,12" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="快捷键行为：" 
                                       Foreground="#333333" 
                                       FontFamily="Microsoft YaHei" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            <TextBlock Foreground="#666666" 
                                       FontFamily="Microsoft YaHei" 
                                       FontSize="13" 
                                       TextWrapping="Wrap"
                                       LineHeight="22">
                                <Run Text="• 当窗口隐藏或未激活时，按快捷键显示并激活窗口"/>
                                <LineBreak/>
                                <Run Text="• 当窗口已激活时，再次按快捷键将最小化窗口"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- 状态提示 -->
                    <Border Grid.Row="3"
                            VerticalAlignment="Bottom"
                            Background="#FFF9E6"
                            BorderBrush="#FFE8A3"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12,10"
                            Margin="0,10,0,0">
                        <TextBlock x:Name="StatusText" 
                                   Text="提示：按下新的快捷键组合进行设置，然后点击确认按钮" 
                                   Foreground="#856404" 
                                   FontFamily="Microsoft YaHei" 
                                   FontSize="13" 
                                   TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- 按钮区域 -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,25,0,0">
                <Button x:Name="OKButton" 
                        Width="130" 
                        Height="44" 
                        Margin="0,0,15,0" 
                        Click="OKButton_Click" 
                        FontFamily="Microsoft YaHei" 
                        FontSize="14"
                        Background="#0078D7" 
                        Foreground="White"
                        BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="确认" FontWeight="SemiBold"/>
                </Button>
                
                <Button x:Name="CancelButton" 
                        Width="130" 
                        Height="44" 
                        Click="CancelButton_Click" 
                        FontFamily="Microsoft YaHei" 
                        FontSize="14"
                        Background="#F0F0F0" 
                        Foreground="#333333"
                        BorderThickness="1" 
                        BorderBrush="#CCCCCC" 
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    CornerRadius="6">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="取消" FontWeight="SemiBold"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>