<Window x:Class="FileSearchTool.Windows.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="首选项" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="设置" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="20,0,0,20"
                           Foreground="#333"/>
                
                <ListBox x:Name="CategoryListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionChanged="CategoryListBox_SelectionChanged"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="Padding" Value="20,0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Background="Transparent" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#0078D7"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    
                    <ListBoxItem Content="快捷键设置" Tag="Hotkey"/>
                    <ListBoxItem Content="文件类型" Tag="FileType"/>
                    <ListBoxItem Content="性能设置" Tag="Performance"/>
                    <ListBoxItem Content="窗口行为" Tag="WindowBehavior"/>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 内容容器 -->
            <ScrollViewer Grid.Row="0" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid x:Name="ContentPanel" Margin="30">
                    <!-- 动态加载的内容将显示在这里 -->
                </Grid>
            </ScrollViewer>

            <!-- 底部按钮 -->
            <Border Grid.Row="1" 
                    Background="#F9F9F9" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="0,1,0,0"
                    Padding="30,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="关闭" 
                            Width="100" 
                            Height="36"
                            FontSize="13"
                            Click="Close_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
